<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
      <%= error_tag @product, :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
      <%= error_tag @product, :price %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_area', autocomplete: "on" %>
      <%= error_tag @product, :description %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :style, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:style_id, Style.all, :id, :name, :include_blank => 'Selecione um estilo') %>
      <%= error_tag @product, :style_id %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:category_id, Category.all, :id, :name, :include_blank => 'Selecione uma categoria') %>
      <%= error_tag @product, :category_id %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cover, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :cover, :class => 'file_field' %>
      <%= error_tag @product, :cover %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :file, "Arquivo (.rar, .zip)", :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :file, :class => 'file_field' %>
      <%= error_tag @product, :file %>
    </div>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>
