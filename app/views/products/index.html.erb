<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>


<%= render 'search' %>
<h1>
  <% if @search_query.present? %>
    <%= t '.search_results' %>
  <% else %>
    <%= t '.title' %>
  <% end %>
</h1>
<div class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    Ordenar por...
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to 'mais novos', products_path(order: 1) %></li>
    <li><%= link_to 'menor preco', products_path(order: 2) %></li>
    <li><%= link_to 'maior preco', products_path(order: 3) %></li>
  </ul>
</div>
<ul>
  
</ul>
<table class="table table-striped">
  <thead>
    <tr>
    <th></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:style) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:user) %></th>
      
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
      <td><%= link_to (image_tag product.cover.url(:small)), product %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.style.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.user.name %></td>
        <% if belongs_to_user(product) %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_product_path(product), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        product_path(product),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?
                          ')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
<% end %>