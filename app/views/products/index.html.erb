<h1>Listing products</h1>

<%= link_to 'mais novos', products_path(order: 1)   %>

<%= link_to 'menor preco', products_path(order: 2) %>

<%= link_to 'maior preco', products_path(order: 3) %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Style</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.style %></td>
        <td><%= product.category %></td>
        <td><%= product.user.nickname %></td>
        <% if belongs_to_user(product) %>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Product', new_product_path %>
<% end -%>
<%= paginate @products %>