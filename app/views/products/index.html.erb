<%- model_class = Product -%>



<h1>
  <% if @search_query.present? %>
    <%= t '.search_results' %>
  
  <% end %>
</h1>
<div class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown">
    Ordenar por...
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to 'Mais novos no site', products_path(order: 1) %></li>
    <li><%= link_to 'Menor Preço', products_path(order: 2) %></li>
    <li><%= link_to 'Maior Preço', products_path(order: 3) %></li>
  </ul>
</div>
<ul>
  
</ul>
<table class="table table-striped">
  
  <tbody>
    <% @products.each do |product| %>
      <tr>
      <td>
        <div class="entry">
          <div class="row">
            <div class="col-xs-6 col-md-3">             
              <a class="thumbnail" style="width: 200px" <%= link_to (image_tag product.cover.url(:small)), product %>     
              </a>
            </div>
          </div>
        </div>
      </td>
        <td><%= link_to product.title %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.user.name %></td>
        <% if belongs_to_user(product) %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_product_path(product), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        product_path(product),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?
                          ')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
<% end %>
<%= paginate @products %>