<h1>Listing products</h1>
<ul>
  <li><%= link_to 'mais novos', products_path(order: 1)   %></li>
  <li><%= link_to 'menor preco', products_path(order: 2) %></li>
  <li><%= link_to 'maior preco', products_path(order: 3) %></li>
</ul>

<%= render 'search' %>
<h1>
  <% if @search_query.present? %>
  <%= t '.search_results' %>
  <% else %>
  <%= t '.title' %>
  <% end %>
</h1>


<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Style</th>
      <th>Category</th>
      <th>User</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.cover.url(:small) %></td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
      <td><%= product.style.name %></td>
      <td><%= product.category.name %></td>
      <td><%= product.user.name %></td>

      <% if belongs_to_user(product) %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end -%>
    </tr>

    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Product', new_product_path %>
<% end -%>
<%= paginate @products %>