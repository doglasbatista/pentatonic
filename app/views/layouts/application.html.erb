<!DOCTYPE html>
<html>
<head>
  <title>Pentatonic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to "PENTATONIC", welcome_path %> </br></br>
  <%= link_to "Seu Carrinho", current_cart %>
  <br/>
  <% if current_user %>
  
      Bem vindo <%= current_user.nickname %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> / <%= link_to "Edit", edit_user_registration_path %>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path %>
      <%= link_to "Sign In", new_user_session_path %>
    <% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
